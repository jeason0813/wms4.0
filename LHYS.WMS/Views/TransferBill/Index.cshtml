
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angularJs")
    @Scripts.Render("~/bundles/billsCommon")
    <style>
        .titletd {
            line-height: 30px;
            font-weight: 500;
            width: 80px;
        }
    </style>
    <title>转仓单</title>
</head>
<body>
    <div class="container-fluid" ng-app="myApp" ng-controller="recordController">
        <div class="row" style="width:100%">
            <form ng-submit="submit()">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-condensed titletable">
                        <tr>
                            <td colspan="9" style="text-align:center"><h2>入库单</h2></td>
                        </tr>
                        <tr>
                            <td class="titletd">转仓单号:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.LBBillCode" required /></td>
                            <td class="titletd">单据日期:</td>
                            <td><input class="form-control" type="date" name="name" ng-model="info.LBBillDate" required /></td>
                            <td class="titletd">发运仓:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.LBFrom" data-toggle="modal" data-target="#SendFile" required /></td>
                            <td class="titletd">移动类型:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.LBMoveType" /></td>
                            <td class="titletd">备注:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.LBRemark" /></td>
                        </tr>
                        <tr>
                            <td class="titletd">入库单号:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.BillCode" disabled /></td>
                            <td class="titletd">入库日期:</td>
                            <td><input class="form-control" type="date" name="name" ng-model="info.CreateDate" required /></td>
                            <td class="titletd">仓库:</td>
                            <td><input class="form-control" type="text" name="name" ng-model="info.Warehouse" data-toggle="modal" data-target="#wareHousechoose" required /></td>
                            <td class="titletd">入库类别:</td>
                            <td><inouttypeselect inouttypes="InOutTypes" inputtypename="info.InputType" inputtypeid="info.InputTypeId" current="currentInOutType"></inouttypeselect>
                            </td>
                            <td class="titletd">业务模式:</td>

                            <td>
                                <select class="form-control" ng-options=" BusinessType for BusinessType in BusinessTypes" ng-model="info.BusinessType" required></select>
                            </td>
                        </tr>
                        <tr>
                            <td class="titletd">装卸类型:</td>
                            <td>
                                <select class="form-control" ng-options=" LoadGoodsType for LoadGoodsType in LoadGoodsTypes" ng-model="info.LoadGoodsType" required></select>
                            </td>
                            <td class="titletd">仓管员:</td>
                            <td><input data-toggle="modal" data-target="#personchoose" class="form-control" type="text" name="name" ng-model="info.ChargePerson" ng-click="loadperson('ChargePerson')" required /></td>
                            <td class="titletd">制单人:</td>
                            <td><input data-toggle="modal" data-target="#personchoose" class="form-control" type="text" name="name" ng-model="info.MakePerson" ng-click="loadperson('MakePerson')" disabled /></td>
                            <td class="titletd">审核人:</td>
                            <td><input data-toggle="modal" data-target="#personchoose" class="form-control" type="text" name="name" ng-model="info.ExaminePerson" ng-click="loadperson('ExaminePerson')" disabled /></td>
                            <td class="titletd">审核日期:</td>
                            <td><input class="form-control" type="date" name="name" ng-model="info.ExamineDate" disabled /></td>
                        </tr>
                        <tr>
                            <td class="titletd">所属部门:</td>
                            <td>
                                <select class="form-control" ng-options="Departent.DeptName for Departent in Departents" ng-model="CurrentDepartment"  ng-change="departentChange(CurrentDepartment)" required >
                                    <option value=""></option>
                                </select>
                            </td>
                            <td class="titletd">备注:</td>
                            <td colspan="7"><input class="form-control" type="text" name="name" ng-model="info.Remark" /></td>
                        </tr>

                    </table>
                    <div>
                        <table class="table table-bordered table-striped table-condensed">
                            <tr>
                                <th>编号</th>
                                <th>物料编码</th>
                                <th>产品线</th>
                                <th>产品名称</th>
                                <th>包装规格</th>
                                <th>单位</th>
                                <th>单位重量</th>
                                <th>数量</th>
                                <th>重量</th>
                                <th>批次</th>
                                <th>货位</th>
                                <th>删除</th>
                            </tr>
                            <tr ng-repeat="record in info.Record">
                                <td>{{$index+1}}</td>  @*编号*@
                                <td><input data-toggle="modal" data-target="#itemchoose" class="form-control item-code" type="text" style="width:120px" ng-model="record.ItemCode" ng-click="loadItem($index)" required /></td>
                                <td><input class="form-control item-code" type="text" ng-model="record.ItemLine" style="width:120px" /></td>
                                <td><input class="form-control" type="text" ng-model="record.ItemName" style="width:80px" /></td>
                                <td><input class="form-control" type="text" ng-model="record.ItemSpecifications " style="width:80px" /></td>
                                <td><input class="form-control" type="text" ng-model="record.ItemUnit" style="width:80px" /></td>
                                <td><input class="form-control" type="text" ng-model="record.UnitWeight" style="width:80px" ng-change="changeCount(record)" disabled/></td>
                                <td><input class="form-control" type="number" ng-model="record.Count" style="width:80px" ng-change="changeCount(record)" required /></td>
                              
                                <td><input class="form-control" type="text" ng-model="record.ItemBatch" style="width:120px" ng-disabled="record.IsBatch=='否'" required /></td>
                                <td><input class="form-control" type="text" ng-model="record.Weight" style="width:80px" /></td>
                             
                                <td><input data-toggle="modal" data-target="#locationchoose" class="form-control" type="text" ng-model="record.ItemLocation" ng-click="clickLocation($index)" style="width:120px" required /></td>
                                <td><button type="button" class="btn btn-danger btn-xs" ng-click="del($index)">删除</button></td>
                            </tr>
                        </table>
                        <div>
                            <button type="button" class="btn btn-info btn-sm" ng-click="add()" style="float:right">添&nbsp;加</button>
                        </div>
                        <br/>
                        <br />
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-success btn-md">&nbsp;&nbsp;&nbsp;保&nbsp;&nbsp;&nbsp;存&nbsp;&nbsp;&nbsp;</button>
                        </div>

                        @*-------------------------------------品项选择模态框-----------------------------------------*@
                        <div class="modal fade" id="itemchoose">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title">请选择品项</h4>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" class="form-control" placeholder="请输入查询条件" value="" ng-model="searchstr" />
                                        <table class="table table-bordered table-striped table-condensed">
                                            <tr>
                                                <th>编号</th>
                                                <th>物料编码</th>
                                                <th>产品线</th>
                                                <th>产品名称</th>
                                                <th>包装规格</th>
                                                <th>单位</th>
                                                <th>单位重量</th>
                                            </tr>
                                            <tr ng-repeat="goodItem in GoodItems | filter:searchstr " ng-dblclick="selectItem(goodItem)">
                                                <td>{{$index+1}}</td>
                                                <td>{{goodItem.ItemCode}}</td>
                                                <td>{{goodItem.ItemLine}}</td>
                                                <td>{{goodItem.ItemName}}</td>
                                                <td>{{goodItem.ItemSpecifications}}</td>
                                                <td>{{goodItem.ItemUnit}}</td>
                                                <td>{{goodItem.UnitWeight}}</td>
                                            </tr>

                                        </table>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                        @*-------------------------------------品项选择模态框end-----------------------------------------*@

                        @*-------------------------------------人员选择模态框-----------------------------------------*@
                        <div class="modal fade" id="personchoose">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title">请选择人员</h4>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" class="form-control" placeholder="请输入查询条件" value="" ng-model="searchstrperson" />
                                        <table class="table table-bordered table-striped table-condensed">
                                            <tr>
                                                <th>工号</th>
                                                <th>姓名</th>
                                            </tr>
                                            <tr ng-repeat="person in UserFrameworks | filter:searchstrperson " ng-dblclick="selectPerson(person)">
                                                <td>{{person.UserCode}}</td>
                                                <td>{{person.UserName}}</td>
                                            </tr>

                                        </table>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                        @*-------------------------------------人员选择模态框end-----------------------------------------*@
                        @*-----------------------------------仓库选择模态框------------------------------------------------*@
                        <div class="modal fade" id="wareHousechoose">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title">请选择仓库</h4>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" class="form-control" placeholder="请输入查询条件" value="" ng-model="searchstrwarehouse" />
                                        <table class="table table-bordered table-striped table-condensed">
                                            <tr>
                                                <th>仓库</th>
                                                <th>所属部门</th>
                                            </tr>
                                            <tr ng-repeat="warehouse in Warehouses | filter:searchstrwarehouse " ng-dblclick="selectWarehouse(warehouse)">
                                                <td>{{warehouse.Name}}</td>
                                                <td>{{warehouse.Department}}</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                        @*-----------------------------------仓库选择模态框end------------------------------------------------*@
                        @*-----------------------------------发运方档案模态框------------------------------------------------*@
                        <div class="modal fade" id="SendFile">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title">请选择仓库</h4>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" class="form-control" placeholder="请输入查询条件" value="" ng-model="searchsendfile" />
                                        <table class="table table-bordered table-striped table-condensed">
                                            <tr>
                                                <th>仓库</th>
                                                <th>联系人</th>
                                            </tr>
                                            <tr ng-repeat="sendfile in SendFiles | filter:searchsendfile " ng-dblclick="selectSendFile(sendfile)">
                                                <td>{{sendfile.Name}}</td>
                                                <td>{{sendfile.Contacts}}</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                        @*-----------------------------------发运方档案模态框end------------------------------------------------*@

                        @*-----------------------------------货位选择模态框------------------------------------------------*@
                        <div class="modal fade" id="locationchoose">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title">请选择货位</h4>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" class="form-control" placeholder="请输入查询条件" value="" ng-model="searchstrlocation" />
                                        <table class="table table-bordered table-striped table-condensed">
                                            <tr>
                                                <th>货位编码</th>
                                                <th>货位名称</th>
                                            </tr>
                                            <tr ng-repeat="location in locationlist | filter:searchstrlocation " ng-dblclick="selectlocation(location)">
                                                <td>{{location.Id}}</td>
                                                <td>{{location.Name}}</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                        @*-----------------------------------货位选择模态框end------------------------------------------------*@

                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        //数据控制器
        myApp.controller('recordController', function ($scope, $http) {
            $http.post("/BaseInfo/GetSendFileSet").success(function (response) {
                $scope.SendFiles=response;
            })
            //获取基础数据
            $http.post("/BaseInfo/GetBaseInfo", { inoutType:'in'}).success(function (response) {
                $scope.Warehouses = response.Warehouse;
                $scope.GoodItems = response.GoodItem;
                $scope.UserFrameworks = response.UserFramework;
                $scope.LoadGoodsTypes = response.LoadGoodsType;
                $scope.BusinessTypes = response.BusinessType;
                $scope.InOutTypes = response.InOutType;
                $scope.Departents = response.Departent;
               //获取单据内容
                $http.post("/TransferBill/GetData", {}, { params: { "TransferBillId": "@ViewBag.TransferBillId" } }).success(function (response) {
                    //绑定数据源
                    $scope.info = response;
                    if (response.Id != '00000000-0000-0000-0000-000000000000') //如果不是新表单
                    {
                        //修改时间格式
                        $scope.info.LBBillDate = jsonDateFormat($scope.info.LBBillDate);
                        $scope.info.CreateDate = jsonDateFormat($scope.info.CreateDate);
                        $scope.info.ExamineDate = jsonDateFormat($scope.info.ExamineDate);

                        //给当前部门赋值
                        for (var i = 0; i < $scope.Departents.length; i++) {
                            if ($scope.Departents[i].DeptCode == $scope.info.DepartmentId) {
                                $scope.CurrentDepartment = $scope.Departents[i];
                                break;
                            }
                        }
                        //给当前仓库的货位赋值
                        for (var i = 0; i < $scope.Warehouses.length; i++) {
                            if ($scope.Warehouses[i].Id == $scope.info.WarehouseId) {
                                $scope.locationlist = $scope.Warehouses[i].Location;
                            }
                        }
                        //给出入库类型赋值
                        for (var i = 0; i < $scope.InOutTypes.length; i++) {
                            if ($scope.InOutTypes[i].Id == $scope.info.InputTypeId) {
                                $scope.currentInOutType = $scope.InOutTypes[i];
                            }
                        }
                    }
                });
            });
           
            //添加行
            $scope.add = function () {
                var obj = new Object();
                $scope.info.Record.push(obj);
            }
            //删除行
            $scope.del = function (idx) {
                $scope.info.Record.splice(idx, 1);
            }
            //自动填重量
            $scope.changeCount = function (record) {
                record.Weight = record.Count * record.UnitWeight;
            }

            //选择了部门  给对应的字段赋值
            $scope.departentChange = function (CurrentDepartment) {
                $scope.info.Department = CurrentDepartment.DeptName;
                $scope.info.DepartmentId = CurrentDepartment.DeptCode;
                $scope.info.Company = CurrentDepartment.CompanyAbbr;
                $scope.info.CompanyId = CurrentDepartment.CmopanyCode;
            }
            //-------------------------------------------------------------------------
            //开始选择品项
            $scope.loadItem = function (idx) {
                $scope.currentItemInput = idx;//当前品项是第几行
            }
            //选择了品项  传进goodItem对象
            $scope.selectItem = function (goodItem) {
                $scope.searchstr = '';//清空搜索框
                //模态框关闭
                $('#itemchoose').modal('hide');
                //赋值
                $scope.info.Record[$scope.currentItemInput].ItemCode = goodItem.ItemCode;
                $scope.info.Record[$scope.currentItemInput].ItemLine = goodItem.ItemLine;
                $scope.info.Record[$scope.currentItemInput].ItemName = goodItem.ItemName;
                $scope.info.Record[$scope.currentItemInput].ItemSpecifications = goodItem.ItemSpecifications;
                $scope.info.Record[$scope.currentItemInput].ItemUnit = goodItem.ItemUnit;
                $scope.info.Record[$scope.currentItemInput].UnitWeight = goodItem.UnitWeight;
                $scope.info.Record[$scope.currentItemInput].IsBatch = goodItem.IsBatch;
            }
            //-------------------------------------------------------------------------
            //开始选择人员
            $scope.loadperson = function (personType) {
                $scope.currentPerson = personType;//当前处理哪个人
            }
            //选择了人员数据
            $scope.selectPerson = function (person) {
                $scope.searchstrperson = '';//清空搜索框
                //模态框关闭
                $('#personchoose').modal('hide');
                //赋值
                switch ($scope.currentPerson) {
                    case 'ChargePerson': $scope.info.ChargePerson = person.UserName; break;
                    case 'MakePerson': $scope.info.MakePerson = person.UserName; break;
                    case 'ExaminePerson': $scope.info.ExaminePerson = person.UserName; break;
                    default:
                }
            }
            //-------------------------------------------------------------------------
            //选择了仓库数据
            $scope.selectWarehouse = function (warehouse) {
                $scope.searchstrwarehouse = '';
                $('#wareHousechoose').modal('hide');
                $scope.info.Warehouse = warehouse.Name;
                $scope.info.WarehouseId = warehouse.Id;
                $scope.locationlist = warehouse.Location;//设置了货位数据
            }
            //-----------------------------------------
            //选择发运方
            $scope.selectSendFile = function (sendfile) {
                $scope.searchsendfile = '';
                $('#SendFile').modal('hide');
                $scope.info.LBFrom = sendfile.Name;
            }
            //---------------------------------------------------------------------------
            //开始选择货位信息
            $scope.clickLocation = function (idx) {
                $scope.currentlocation = idx;
            }
            //选择了货位数据
            $scope.selectlocation = function (location) {
                $scope.info.Record[$scope.currentlocation].ItemLocation = location.Name; //保存货位信息
                $scope.info.Record[$scope.currentlocation].ItemLocationId = location.Id;
                $scope.currentlocation = null;
                $('#locationchoose').modal('hide');
                $scope.searchstrlocation = '';
            }
            //--------------------------------------------------------------------------------
            //提交表单
            $scope.submit = function () {
                $http.post("/TransferBill/SaveData", { TransferBill: $scope.info }).success(function (response) {
                    if (response == 'no') {
                        alert('保存失败');
                    } else {
                        window.location.href = 'IndexShow?TransferBillId=' + response;
                    }
                });
            }
        })
    </script>
</body>
</html>

